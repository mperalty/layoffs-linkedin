{
    "manifest_version": 3,
    "name": "Layoff Check",
    "version": "1.1",
    "description": "Understand if a company has a listing in Layoffs.fyi before you apply",
    "icons": {
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*.docs.google.com/spreadsheets/d/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/jobs/*"
            ],
            "js": [
                "jquery.min.js",
                "main.js"
            ]
        }
    ]
}
